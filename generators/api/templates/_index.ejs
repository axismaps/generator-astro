const express = require('express');
const validate = require('express-validation');
const controller = require('./<%= name %>.controller');
const validation = require('./<%= name %>.validation');

const router = express.Router();

/**
 * @api {<%= method %>} <%= apibase %>/<%= apiversion %>/<%= name %> <%= name %>
 * @apiDescription <%= apidesc %>
 * @apiVersion 1.0.0
 * @apiName <%= name %>
 * @apiPermission public
 *
 * @apiParam  {String} code  Test Code
 *
 * @apiSuccess {Number} responseCode     HTTP Response Code
 * @apiSuccess {String} responseMessage  Response message
 * @apiSuccess {Object} response         Response object
 *
 * @apiError (Bad Request 400)  ValidationError  Some parameters may contain invalid values
 */
router.route('/<%= name %>')
  .<%= method %>(validate(validation.<%= name %>), controller.<%= name %>);

module.exports = router;
