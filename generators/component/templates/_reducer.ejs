import persistReducer from 'redux-persist/lib/persistReducer';
import storage from 'redux-persist/lib/storage';
import * as types from './<%= filename %>.actionType';

const persistConfig = {
  key: '<%= name %>',
  storage,
  whitelist: [
    /* keys to be persisted */
  ],
};

const initialState = {};

function <%= name %>(state = initialState, action) { // NOSONAR
  switch (action.type) {  // eslint-disable-line
    case types.<%= NAME %>_TEST:
      return {
        ...state,
        loading: true
      };

    case types.<%= NAME %>_TEST_SUCCESS:
      return {
        ...state,
        loading: false,
        success: true
      };

    default:
      return state;
  }
}

export default persistReducer(persistConfig, <%= name %>);
